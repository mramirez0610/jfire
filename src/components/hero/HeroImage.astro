---
const { heroImage } = Astro.props;
import { Image } from "astro:assets";
---

<style lang="scss">
  .hero-image {
    position: absolute;
    min-width: 100vw;
    // min-height: 100vh;
    min-height: 90vh;
    inset: 0;
    z-index: -2;

    img {
      width: 100vw;
      height: 100vh;
      vertical-align: middle;
      font-style: italic;
      background-repeat: no-repeat;
      background-size: cover;
      shape-margin: 1rem;
      object-fit: cover;
      object-position: center;
      background-attachment: fixed;
      background-position: center;
    }
  }
</style>

<section class="hero-image">
  <Image
    src={heroImage}
    alt="Hero Banner"
    width="1920"
    height="1080"
    quality={100}
    format="jpg"
    sizes="(min-width: 1080px) 100vw"
    widths={[1920]}
  />
  <!-- <img src={heroImage} alt="hero banner" /> -->
</section>
