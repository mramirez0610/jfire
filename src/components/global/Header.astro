    div {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 1em;
      height: 6vh;
    }
  }

  @media (max-width: 768px) {
    header {
      top: 30px;
      // top: 0;

      div {
      }
    }
  }
</style>

